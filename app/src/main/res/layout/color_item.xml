<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/borderView"
        android:layout_width="@dimen/color_item_not_pressed"
        android:layout_height="@dimen/color_item_not_pressed"
        android:layout_gravity="center"
        android:background="@drawable/color_background_enabled" />

    <View
        android:id="@+id/enabledView"
        android:layout_width="@dimen/color_item_pressed"
        android:layout_height="@dimen/color_item_pressed"
        android:layout_gravity="center"
        android:background="@drawable/gradient_background" />

</FrameLayout>